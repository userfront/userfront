{
  "name": "@userfront/react",
  "version": "0.0.0",
  "description": "Transform your React application with Userfront authentication",
  "repository": {
    "type": "git",
    "url": "https://github.com/userfront/userfront.git"
  },
  "keywords": [
    "userfront",
    "authentication",
    "authorization",
    "javascript",
    "typescript",
    "web",
    "react",
    "sdk"
  ],
  "files": [
    "dist"
  ],
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "scripts": {
    "build": "tsup --cjsInterop",
    "dev": "tsup --watch --cjsInterop",
    "lint": "eslint .",
    "lint:fix": "pnpm lint --fix",
    "test:watch": "vitest watch",
    "test": "vitest run",
    "check-types": "tsc --noEmit"
  },
  "devDependencies": {
    "@testing-library/react": "15.0.7",
    "@types/react": "18.3.1",
    "@types/react-dom": "18.3.0",
    "@userfront/core": "0.6.8",
    "@userfront/toolkit": "1.0.9",
    "@userfront/tsconfig": "workspace:*",
    "@vitejs/plugin-react": "4.2.1",
    "axios": "1.6.8",
    "happy-dom": "14.11.0",
    "react-use": "17.5.0",
    "tsup": "8.0.2",
    "type-fest": "4.18.2",
    "typescript": "5.4.5",
    "vitest": "1.6.0"
  },
  "peerDependencies": {
    "eslint": "9.2.0",
    "react": "18.3.1",
    "react-dom": "18.3.1"
  }
